<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or "◎" }}</title>
  <link rel="stylesheet" href="/css/site.css" />
</head>

<body>
  <header class="site-head">
    <a class="brand" href="/">◎</a>
  </header>

  <main>
    {{ content | safe }}
  </main>
  
  {% if page.url contains '?edit=1' %}
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

    <!-- tiny inline editor UI; runs only on ?edit=1 pages -->
    <script>
    (() => {
      const url = new URL(location.href);
      if (!url.searchParams.has('edit')) return;

      // --- build a tiny editor UI ---
      const wrap = document.createElement('div');
      wrap.style.position = 'fixed';
      wrap.style.right = '16px';
      wrap.style.bottom = '16px';
      wrap.style.left = '16px';
      wrap.style.background = '#fff';
      wrap.style.border = '1px solid #e5e7eb';
      wrap.style.padding = '12px';
      wrap.style.zIndex = '9999';
      wrap.innerHTML = `
        <div style="margin-bottom:8px;font-weight:700">Inline editor</div>
        <textarea id="geonote-editor" style="width:100%;height:240px;font:14px/1.5 ui-sans-serif,system-ui"></textarea>
        <div style="margin-top:8px;display:flex;gap:8px">
          <button id="geonote-login">Log in</button>
          <button id="geonote-save">Save</button>
          <span id="geonote-status" style="margin-left:8px;color:#6b7280"></span>
        </div>
      `;
      document.body.appendChild(wrap);

      // pre-fill with current page body text (basic)
      const ta = document.getElementById('geonote-editor');
      ta.value = document.querySelector('main')?.innerText?.trim() || '';

      // Netlify Identity login
      const status = document.getElementById('geonote-status');
      document.getElementById('geonote-login').onclick = () => {
        netlifyIdentity.open(); // show modal
      };

      // Save to Netlify Function
      document.getElementById('geonote-save').onclick = async () => {
        status.textContent = 'Saving…';
        try {
          const res = await fetch('/.netlify/functions/save-country', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              path: location.pathname,       // e.g. /country/co/
              content: ta.value              // what you typed
            })
          });
          if (!res.ok) throw new Error(await res.text());
          status.textContent = 'Saved.';
        } catch (err) {
          status.textContent = 'Error: ' + err.message;
        }
      };
    })();
    </script>
  {% endif %}

</body>
</html>
